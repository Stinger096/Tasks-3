import java.util.*;
import java.lang.*;
import java.io.*;

public class Main
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc = new Scanner(System.in);
		long n = sc.nextLong();
		long fn;
		
		if (n%2 == 0) fn = n/2;
		else fn = (-1)*(n/2 + 1);
		
		System.out.println(fn);
	}	
}
